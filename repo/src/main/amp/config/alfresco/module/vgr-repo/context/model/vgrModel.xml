            <stored>false</stored>
            <tokenised>false</tokenised>
          </index>
        </property>
        <property name="apelon:value">
          <type>d:text</type>
          <multiple>true</multiple>
          <index enabled="true">
            <atomic>true</atomic>
            <stored>false</stored>
            <tokenised>false</tokenised>
