            <mandatory>false</mandatory>
            <many>true</many>
          </target>
        </association>
      </associations>

      <mandatory-aspects>
        <aspect>vgr:standard</aspect>
        <aspect>cm:versionable</aspect>
      </mandatory-aspects>
    </type>

